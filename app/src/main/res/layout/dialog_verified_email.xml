<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:text="@string/mess_dialog_error_accountUnverified"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/btn_verified_email"
        android:id="@+id/btn_sendverifiedEmail"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/btn_cancel_verified_email"
        android:id="@+id/btn_checkverifiedEmail"
        android:layout_height="wrap_content" />

</LinearLayout>